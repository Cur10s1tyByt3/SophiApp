<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SophiApp.Styles">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="WindowForegroundNormal" Color="#F5F5F5" />
            <SolidColorBrush x:Key="WindowBackgroundNormal" Color="#232735" Opacity="0.55" />
            <SolidColorBrush x:Key="WindowAccentNormal" Color="#4CC2FF" />
            <SolidColorBrush x:Key="WindowUnaccentedNormal" Color="#BCBCBC" />
            <SolidColorBrush x:Key="NavigationViewSelectionIndicatorForeground" Color="#4CC2FF" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="WindowForegroundNormal" Color="#222222" />
            <SolidColorBrush x:Key="WindowBackgroundNormal" Color="#FCFCFC" Opacity="0.55" />
            <SolidColorBrush x:Key="WindowAccentNormal" Color="#0078D4" />
            <SolidColorBrush x:Key="WindowUnaccentedNormal" Color="#BCBCBC" />
            <SolidColorBrush x:Key="NavigationViewSelectionIndicatorForeground" Color="#0078D4" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
