<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="WindowContentStyle" TargetType="{x:Type Border}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=WindowState,
                    RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Value="Maximized">
                <Setter Property="BorderThickness" Value="6"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="CategoryMenuButtonMarkerStyle" TargetType="{x:Type Border}">
        <Setter Property="Width" Value="3" />
        <Setter Property="Height" Value="16" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>
</ResourceDictionary>