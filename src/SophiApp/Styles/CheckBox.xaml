<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="CheckBox" x:Key="UIControlCheckBoxStyle">
        <Setter Property="Margin" Value="17"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <Style TargetType="CheckBox" x:Key="SquareCheckBoxStyle" BasedOn="{StaticResource UIControlCheckBoxStyle}">
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>
    <Style TargetType="CheckBox" x:Key="TaskSchedulerCheckBoxStyle">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
</ResourceDictionary>
