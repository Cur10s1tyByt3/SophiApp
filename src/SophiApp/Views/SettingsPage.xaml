<Page x:Class="SophiApp.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:SophiApp.ControlTemplates"
      xmlns:helpers="using:SophiApp.Helpers"
      xmlns:service="using:SophiApp.Services"
      xmlns:xaml="using:Microsoft.UI.Xaml"
      mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <helpers:BoolToInversionConverter x:Key="BoolToInversionConverter" />
    </Page.Resources>
    <Grid>
        <StackPanel>
            <controls:MadeForWindows/>
            <StackPanel Orientation="Horizontal"
                        Margin="{StaticResource SettingPageControlsVerticalMargin}"
                        Height="110">
                <controls:ContentBlock x:Uid="SettingsPage_ContentBlock_SelectedTheme"
                                       Width="365">
                    <controls:ContentBlock.Content>
                        <StackPanel Orientation="Horizontal">
                            <ToggleButton x:Uid="Settings_Theme_Light"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}"
                                      IsHitTestVisible="{Binding Path=IsChecked, RelativeSource={RelativeSource Self}, Converter={StaticResource BoolToInversionConverter}}"
                                      Command="{x:Bind ViewModel.SwitchThemeCommand}">
                                <ToggleButton.CommandParameter>
                                    <xaml:ElementTheme>Light</xaml:ElementTheme>
                                </ToggleButton.CommandParameter>
                            </ToggleButton>
                            <ToggleButton x:Uid="Settings_Theme_Dark"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}"
                                      IsHitTestVisible="{Binding Path=IsChecked, RelativeSource={RelativeSource Self}, Converter={StaticResource BoolToInversionConverter}}"
                                      Command="{x:Bind ViewModel.SwitchThemeCommand}">
                                <ToggleButton.CommandParameter>
                                    <xaml:ElementTheme>Dark</xaml:ElementTheme>
                                </ToggleButton.CommandParameter>
                            </ToggleButton>
                            <ToggleButton x:Uid="Settings_Theme_Auto"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Default, Mode=OneWay}"
                                      IsHitTestVisible="{Binding Path=IsChecked, RelativeSource={RelativeSource Self}, Converter={StaticResource BoolToInversionConverter}}"
                                      Command="{x:Bind ViewModel.SwitchThemeCommand}">
                                <ToggleButton.CommandParameter>
                                    <xaml:ElementTheme>Default</xaml:ElementTheme>
                                </ToggleButton.CommandParameter>
                            </ToggleButton>
                        </StackPanel>
                    </controls:ContentBlock.Content>
                </controls:ContentBlock>
                <controls:ContentBlock x:Uid="SettingsPage_ContentBlock_AboutApp"
                                       Width="270"
                                       Margin="{StaticResource SettingPageControlsHorizontalMargin}">
                    <controls:ContentBlock.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/AppLogo.svg"
                                   Width="22"
                                   Height="18"/>
                            <TextBlock Text="{x:Bind ViewModel.Version, Mode=OneWay}"
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       Margin="{StaticResource SettingPageControlsHorizontalMargin}"/>

                            <TextBlock Text="{x:Bind ViewModel.Build, Mode=OneWay}"
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       Margin="3, 0, 0, 2"
                                       Foreground="{ThemeResource WindowAccent}"/>
                        </StackPanel>
                    </controls:ContentBlock.Content>
                </controls:ContentBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="{StaticResource SettingPageControlsVerticalMargin}"
                        Height="56">
                <controls:IconHyperlink ImageSource="/Assets/GitHub.svg"
                                        Text="{x:Bind service:AppContextService.GitHub}"/>
                <controls:IconHyperlink Margin="{StaticResource SettingPageControlsHorizontalMargin}"
                                        ImageSource="/Assets/Discord.svg"
                                        Text="{x:Bind service:AppContextService.Discord}"/>
                <controls:IconHyperlink Margin="{StaticResource SettingPageControlsHorizontalMargin}"
                                        ImageSource="/Assets/Telegram.svg"
                                        Text="{x:Bind service:AppContextService.Telegram}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
