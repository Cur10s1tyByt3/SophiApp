<Page
    x:Class="SophiApp.Views.SystemPage"
    x:Name="PageSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollView>
        <StackPanel IsHitTestVisible="{x:Bind ViewModel.NavigationViewHitTestVisible, Mode=OneWay}">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Uid="Page_System" Style="{StaticResource PageTitleTextStyle}"/>
            </StackPanel>
            <Grid x:Name="ItemsContainerGrid"
                  Margin="{StaticResource PageBottomMargin}">
            </Grid>
        </StackPanel>
    </ScrollView>
</Page>
