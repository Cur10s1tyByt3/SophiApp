<Page
    x:Class="SophiApp.Views.RequirementsFailurePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Margin="0, 0, 0, 90">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0"
               Source="/Assets/AppLogoBig.svg"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Width="373"
               Height="103"
               Margin="0, 62, 0, 0"/>

        <TextBlock Grid.Row="1"
                   Text="{x:Bind ViewModel.StatusText, Mode=OneWay}"
                   Style="{StaticResource RequirementsFailurePageTextStyle}"
                   Foreground="{ThemeResource WindowForeground}"
                   Margin="0, 3, 0, 20"/>
    </Grid>
</Page>
